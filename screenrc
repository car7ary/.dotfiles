# Encoding
defutf8 on
encoding utf-8 utf-8
defencoding utf-8
defkanji utf-8

# shell
shell /bin/bash

# Status bar
hardstatus alwayslastline "%{= cd} %-w%{= dd} %n %t* %{-}%+w %="

# Key bind
escape ^Tt
zombie ^[

# Common
defscrollback 10000
termcapinfo xterm* ti@:te@
altscreen on
defbce on
term xterm-256color

# Deactivate
startup_message off
vbell off

# Logging
logfile "$HOME/logs/screen/screen-%Y%m%d-%n.log"
deflog on
